# BioCode Environment Configuration

# Application
BIOCODE_ENVIRONMENT=development
BIOCODE_DEBUG=true
BIOCODE_APP_NAME=BioCode

# API Configuration
BIOCODE_API_HOST=0.0.0.0
BIOCODE_API_PORT=8000
BIOCODE_API_PREFIX=/api/v1

# Database
BIOCODE_DB_URL=sqlite:///./biocode.db
BIOCODE_DB_ECHO=false

# Redis (Optional)
# BIOCODE_REDIS_URL=redis://localhost:6379

# Monitoring
BIOCODE_PROMETHEUS_ENABLED=true
BIOCODE_METRICS_PORT=9090

# Security
BIOCODE_SECRET_KEY=your-secret-key-here
BIOCODE_JWT_ALGORITHM=HS256
BIOCODE_JWT_EXPIRE_MINUTES=30

# CORS
BIOCODE_ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Logging
BIOCODE_LOG_LEVEL=INFO
BIOCODE_LOG_FORMAT=json

# Features
BIOCODE_ENABLE_DOCS=true
BIOCODE_ENABLE_DASHBOARD=true
BIOCODE_ENABLE_METRICS=true